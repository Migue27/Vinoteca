@model IEnumerable<Vinoteca.Models.Vino>

@{
    ViewData["Title"] = "Vinos a la venta";
}

<h1>Vinos a la venta</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DenominacionOrigen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoVino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EdadVino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alcohol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DenominacionOrigen.Denominacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoVino)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EdadVino)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alcohol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio) €
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">Detalle</a> |
                    <a asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
