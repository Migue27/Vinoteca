@model Vinoteca.Models.DenominacionOrigen

@{
    ViewData["Title"] = "Nueva denominación";
}

<h1 class="main-title">Nueva denominación de origen</h1>
<hr class="main-hr"/>
<div class="ml-5">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Denominacion" class="control-label bold-text"></label>
                <input asp-for="Denominacion" class="form-control" />
                <span asp-validation-for="Denominacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn custom-btn-primary" />
            </div>
        </form>
    </div>
    <div class="mt-3">
        <a asp-controller="Vinos" asp-action="Create" class="custom-anchor">Volver</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
