@model Vinoteca.Models.DenominacionOrigen

@{
    ViewData["Title"] = "Nueva denominación";
}

<h1>Nueva denominación de origen</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Denominacion" class="control-label"></label>
                <input asp-for="Denominacion" class="form-control" />
                <span asp-validation-for="Denominacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Vinos" asp-action="Create">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
